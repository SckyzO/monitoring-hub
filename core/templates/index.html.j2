                init() {
                    try { this.exporters = JSON.parse(document.getElementById('exporters-data').textContent); this.categories = JSON.parse(document.getElementById('categories-data').textContent); } catch(e) {}
                    this.theme = localStorage.getItem('appearance') || 'deep';
                    const savedColor = localStorage.getItem('color-theme');
                    if (savedColor) { const colorObj = this.colors.find(c => c.name === savedColor); if (colorObj) this.setThemeColor(colorObj); } else { this.setThemeColor(this.colors[0]); }
                    window.addEventListener('scroll', () => {
                        this.isScrolled = window.scrollY > 100;
                        this.showBackToTop = window.scrollY > 400;
                    });
                    window.addEventListener('mousemove', (e) => {
                        if (this.tooltip.visible) {
                            this.tooltip.x = e.clientX + 15;
                            this.tooltip.y = e.clientY + 15;
                        }
                    });

                    // Welcome Tip Logic
                    if (!localStorage.getItem('hub-factory-visited')) {
                        setTimeout(() => { this.showWelcomeTip = true; }, 1000);
                        setTimeout(() => { this.showWelcomeTip = false; localStorage.setItem('hub-factory-visited', 'true'); }, 10000);
                    }

                    this.$nextTick(() => { lucide.createIcons(); });
                    this.$watch('filteredItems', () => this.$nextTick(() => lucide.createIcons()));
                    this.$watch('currentPage', () => this.$nextTick(() => lucide.createIcons()));
                    this.$watch('perPage', () => this.$nextTick(() => lucide.createIcons()));
                    this.$watch('showCommandPalette', (v) => { if(v) this.$nextTick(() => this.$refs.commandInput.focus()); });
