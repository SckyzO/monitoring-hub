<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monitoring Hub | Software Factory</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #0066cc; --bg: #f8f9fa; --card-bg: #ffffff;
            --text: #2c3e50; --text-secondary: #6c757d; --border: #e9ecef;
            --code-bg: #2d3436; --code-text: #dfe6e9; --th-bg: #f8f9fa; --hover-bg: #f1f3f5;
            --success: #27ae60; --danger: #e74c3c; --warning: #f39c12;
            --input-bg: #f1f3f5;
        }

        [data-theme="dark"] {
            --primary: #4dabf7; --bg: #121212; --card-bg: #1e1e1e;
            --text: #e0e0e0; --text-secondary: #a0a0a0; --border: #333;
            --code-bg: #000; --code-text: #b0b0b0; --th-bg: #252525; --hover-bg: #2d2d2d;
            --input-bg: #2d2d2d;
        }

        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; background: var(--bg); color: var(--text); margin: 0; padding: 0; line-height: 1.6; transition: background 0.3s, color 0.3s; }
        .container { max-width: 1200px; margin: 0 auto; padding: 40px 20px; }
        
        header { text-align: center; margin-bottom: 40px; position: relative; }
        h1 { font-size: 2.5rem; color: var(--primary); margin: 0; letter-spacing: -1px; }
        .subtitle { color: var(--text-secondary); font-size: 1.1rem; margin-top: 10px; font-weight: 300; }
        
        .controls { position: absolute; top: 0; right: 20px; display: flex; gap: 10px; }
        .control-btn { background: var(--card-bg); border: 1px solid var(--border); color: var(--text); padding: 10px; border-radius: 50%; cursor: pointer; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; box-shadow: 0 2px 5px rgba(0,0,0,0.1); transition: all 0.2s; }
        .control-btn:hover { border-color: var(--primary); color: var(--primary); transform: scale(1.05); }

        /* Quick Links */
        .quick-links { display: flex; flex-wrap: wrap; gap: 10px; justify-content: center; margin-bottom: 40px; }
        .repo-link { display: inline-flex; align-items: center; gap: 8px; padding: 8px 15px; background: var(--card-bg); border: 1px solid var(--border); border-radius: 20px; text-decoration: none; color: var(--text); font-size: 0.85rem; transition: all 0.2s; }
        .repo-link:hover { border-color: var(--primary); transform: translateY(-2px); }

        /* Search */
        .search-container { margin-bottom: 30px; position: relative; max-width: 600px; margin-left: auto; margin-right: auto; }
        .search-input { width: 100%; padding: 12px 20px 12px 45px; border-radius: 25px; border: 1px solid var(--border); background: var(--card-bg); color: var(--text); font-size: 1rem; outline: none; transition: border-color 0.2s; }
        .search-input:focus { border-color: var(--primary); }
        .search-icon { position: absolute; left: 18px; top: 15px; color: var(--text-secondary); }

        /* Setup Section */
        .setup-section { background: var(--card-bg); border-radius: 12px; padding: 25px; margin-bottom: 40px; border: 1px solid var(--border); }
        .tabs { display: flex; gap: 10px; border-bottom: 2px solid var(--border); margin-bottom: 15px; }
        .tab { padding: 8px 15px; cursor: pointer; font-weight: 600; color: var(--text-secondary); border-bottom: 2px solid transparent; margin-bottom: -2px; }
        .tab.active { color: var(--primary); border-bottom-color: var(--primary); }
        .tab-content { display: none; }
        .tab-content.active { display: block; }
        pre { background: var(--code-bg); color: var(--code-text); padding: 15px; border-radius: 8px; overflow-x: auto; position: relative; margin: 0; font-size: 0.9rem; }
        .copy-btn { position: absolute; top: 10px; right: 10px; background: rgba(255,255,255,0.1); border: none; color: #fff; padding: 4px 8px; border-radius: 4px; cursor: pointer; font-size: 0.75rem; }

        /* Packages Grid / List */
        .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 20px; transition: all 0.3s ease; }
        
        .card { background: var(--card-bg); border-radius: 12px; padding: 20px; border: 1px solid var(--border); transition: all 0.2s; display: flex; flex-direction: column; }
        .card:hover { transform: translateY(-3px); box-shadow: 0 10px 20px rgba(0,0,0,0.05); }
        .card-header { display: flex; justify-content: space-between; align-items: start; margin-bottom: 15px; }
        .card-title { margin: 0; font-size: 1.4rem; font-weight: 700; }
        .card-title a { color: var(--primary); text-decoration: none; }
        .card-title a:hover { text-decoration: underline; }

        .version-badge { background: var(--hover-bg); color: var(--primary); padding: 2px 8px; border-radius: 6px; font-size: 0.8rem; font-weight: 700; border: 1px solid var(--border); }
        .verified-badge { background: #e8f5e9; color: #2e7d32; padding: 2px 8px; border-radius: 6px; font-size: 0.75rem; font-weight: 700; display: inline-flex; align-items: center; gap: 4px; border: 1px solid #c8e6c9; margin-left: 5px; }
        [data-theme="dark"] .verified-badge { background: #1b5e20; color: #c8e6c9; border-color: #2e7d32; }
        .description { color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 20px; flex-grow: 1; }

        /* Docker Pull Widget */
        .docker-widget { background: var(--input-bg); border-radius: 8px; border: 1px solid var(--border); display: flex; align-items: center; overflow: hidden; margin-top: 15px; }
        .docker-widget input { background: transparent; border: none; color: var(--text); padding: 8px 12px; font-family: monospace; font-size: 0.8rem; flex-grow: 1; outline: none; }
        .docker-copy { background: var(--border); border: none; color: var(--text); padding: 8px 12px; cursor: pointer; transition: all 0.2s; }
        .docker-copy:hover { background: var(--primary); color: #fff; }

        /* Compatibility Matrix */
        .compat-matrix { width: 100%; border-collapse: collapse; font-size: 0.8rem; margin-top: 15px; border: 1px solid var(--border); }
        .compat-matrix th { background: var(--th-bg); padding: 6px; border: 1px solid var(--border); font-weight: 600; text-align: center; }
        .compat-matrix td { padding: 8px; border: 1px solid var(--border); text-align: center; }
        
        /* List Mode Styling */
        .grid.list-mode { grid-template-columns: 1fr; }
        .grid.list-mode .card { flex-direction: row; align-items: center; gap: 30px; padding: 15px 25px; }
        .grid.list-mode .card-header { margin-bottom: 0; min-width: 250px; flex-direction: column; align-items: start; }
        .grid.list-mode .description { margin-bottom: 0; }
        .grid.list-mode .compat-matrix { margin-top: 0; max-width: 400px; min-width: 350px; }
        .grid.list-mode .docker-widget { margin-top: 0; min-width: 350px; }

        /* Status Badges */
        .status-success { color: var(--success); font-weight: 600; text-decoration: none; display: flex; flex-direction: column; align-items: center; }
        .status-success:hover { text-decoration: underline; }
        .status-failed { color: var(--danger); font-weight: 600; display: inline-flex; align-items: center; gap: 4px; }
        .na { color: #ccc; font-style: italic; }

        footer { text-align: center; margin-top: 60px; color: var(--text-secondary); font-size: 0.85rem; padding-bottom: 40px; }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="controls">
                <button class="control-btn" id="layout-btn" onclick="toggleLayout()" title="Toggle Grid/List View">
                    <i class="fas fa-list"></i>
                </button>
                <button class="control-btn" id="theme-btn" onclick="toggleTheme()" title="Toggle Dark/Light Mode">
                    <i class="fas fa-moon"></i>
                </button>
            </div>
            <h1>üè≠ Monitoring Hub</h1>
            <p class="subtitle">Automated Software Factory for Prometheus Tools</p>
        </header>

        <!-- (Quick links and Setup sections remain the same) -->
        <div class="quick-links">
            <a href="el8/x86_64/" class="repo-link"><i class="fas fa-folder"></i> EL8 x86_64</a>
            <a href="el8/aarch64/" class="repo-link"><i class="fas fa-folder"></i> EL8 ARM64</a>
            <a href="el9/x86_64/" class="repo-link"><i class="fas fa-folder"></i> EL9 x86_64</a>
            <a href="el9/aarch64/" class="repo-link"><i class="fas fa-folder"></i> EL9 ARM64</a>
            <a href="el10/x86_64/" class="repo-link"><i class="fas fa-folder"></i> EL10 x86_64</a>
            <a href="el10/aarch64/" class="repo-link"><i class="fas fa-folder"></i> EL10 ARM64</a>
        </div>

        <section class="setup-section">
            <h3 style="margin-top:0"><i class="fas fa-terminal"></i> Quick Repo Setup</h3>
            <div class="tabs">
                <div class="tab active" onclick="switchTab('el9')">EL9 (Alma/Rocky)</div>
                <div class="tab" onclick="switchTab('el8')">EL8</div>
                <div class="tab" onclick="switchTab('el10')">EL10</div>
            </div>
            <div id="el9" class="tab-content active">
                <pre><code>sudo dnf config-manager --add-repo https://sckyzo.github.io/monitoring-hub/el9/$(arch)/</code><button class="copy-btn" onclick="copyToClipboard(this)">Copy</button></pre>
            </div>
            <div id="el8" class="tab-content">
                <pre><code>sudo dnf config-manager --add-repo https://sckyzo.github.io/monitoring-hub/el8/$(arch)/</code><button class="copy-btn" onclick="copyToClipboard(this)">Copy</button></pre>
            </div>
            <div id="el10" class="tab-content">
                <pre><code>sudo dnf config-manager --add-repo https://sckyzo.github.io/monitoring-hub/el10/$(arch)/</code><button class="copy-btn" onclick="copyToClipboard(this)">Copy</button></pre>
            </div>
        </section>

        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search exporters..." onkeyup="filterExporters(this.value)">
        </div>

        <div class="grid" id="exporter-grid">
            {% for exporter in exporters %}
            <div class="card" data-name="{{ exporter.name }}" data-desc="{{ exporter.description }}">
                <div class="card-header">
                    <h2 class="card-title">
                        <a href="https://github.com/SckyzO/monitoring-hub/pkgs/container/monitoring-hub%2F{{ exporter.name }}" target="_blank">
                            <i class="fas fa-box"></i> {{ exporter.name }}
                        </a>
                    </h2>
                    <div style="display:flex; align-items:center;">
                        <span class="version-badge">v{{ exporter.version }}</span>
                        <span class="verified-badge" title="Automated Smoke Test Passed">
                            <i class="fas fa-shield-alt"></i> Verified
                        </span>
                    </div>
                </div>
                <p class="description">{{ exporter.description }}</p>
                
                <!-- Matrix: Grid mode (Vertical) vs List mode (Horizontal via JS/CSS) -->
                <div class="matrix-wrapper">
                    <!-- Standard Matrix (OS x Arch) -->
                    <table class="compat-matrix grid-only">
                        <thead>
                            <tr><th>OS</th><th>x86_64</th><th>aarch64</th></tr>
                        </thead>
                        <tbody>
                            {% for dist in ['el8', 'el9', 'el10'] %}
                            <tr>
                                <th>{{ dist | upper }}</th>
                                {% for arch in ['x86_64', 'aarch64'] %}
                                <td>
                                    {% set info = exporter.availability[dist][arch] %}
                                    {% if info.status == 'success' %}
                                    <a href="{{ info.path }}" class="status-success"><i class="fas fa-check-circle"></i> RPM</a>
                                    {% elif info.status == 'failed' %}<span class="status-failed"><i class="fas fa-times-circle"></i> Failed</span>
                                    {% else %}<span class="na">N/A</span>{% endif %}
                                </td>
                                {% endfor %}
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <!-- Inverted Matrix for List Mode (Arch x OS) - Hidden by default -->
                    <table class="compat-matrix list-only" style="display:none">
                        <thead>
                            <tr><th>Arch</th><th>EL8</th><th>EL9</th><th>EL10</th></tr>
                        </thead>
                        <tbody>
                            {% for arch in ['x86_64', 'aarch64'] %}
                            <tr>
                                <th>{{ arch }}</th>
                                {% for dist in ['el8', 'el9', 'el10'] %}
                                <td>
                                    {% set info = exporter.availability[dist][arch] %}
                                    {% if info.status == 'success' %}
                                    <a href="{{ info.path }}" class="status-success"><i class="fas fa-check-circle"></i> RPM</a>
                                    {% elif info.status == 'failed' %}<span class="status-failed">Failed</span>
                                    {% else %}<span class="na">‚Äî</span>{% endif %}
                                </td>
                                {% endfor %}
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {% if exporter.artifacts.docker.enabled %}
                <div class="docker-widget">
                    <input type="text" readonly value="docker pull ghcr.io/sckyzo/monitoring-hub/{{ exporter.name }}:latest">
                    <button class="docker-copy" onclick="copyDockerWidget(this)" title="Copy Command">
                        <i class="fas fa-copy"></i>
                    </button>
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>

        <footer>
            <p>Generated by Monitoring Hub Factory. <a href="https://github.com/SckyzO/monitoring-hub">Source on GitHub</a>.</p>
        </footer>
    </div>

    <script>
        function switchTab(id) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.querySelector(`.tab[onclick="switchTab('${id}')"]`).classList.add('active');
            document.getElementById(id).classList.add('active');
        }

        function toggleTheme() {
            const current = document.documentElement.getAttribute("data-theme");
            const next = current === "dark" ? "light" : "dark";
            document.documentElement.setAttribute("data-theme", next);
            localStorage.setItem("theme", next);
            document.querySelector("#theme-btn i").className = next === "dark" ? "fas fa-sun" : "fas fa-moon";
        }

        function toggleLayout() {
            const grid = document.getElementById("exporter-grid");
            const isList = grid.classList.toggle("list-mode");
            localStorage.setItem("layout", isList ? "list" : "grid");
            document.querySelector("#layout-btn i").className = isList ? "fas fa-th" : "fas fa-list";
            
            // Toggle table visibility
            document.querySelectorAll('.grid-only').forEach(el => el.style.display = isList ? 'none' : 'table');
            document.querySelectorAll('.list-only').forEach(el => el.style.display = isList ? 'table' : 'none');
        }

        // Initialization
        const savedTheme = localStorage.getItem("theme") || "light";
        document.documentElement.setAttribute("data-theme", savedTheme);
        document.querySelector("#theme-btn i").className = savedTheme === "dark" ? "fas fa-sun" : "fas fa-moon";

        const savedLayout = localStorage.getItem("layout") || "grid";
        if (savedLayout === "list") {
            document.getElementById("exporter-grid").classList.add("list-mode");
            document.querySelector("#layout-btn i").className = "fas fa-th";
            document.querySelectorAll('.grid-only').forEach(el => el.style.display = 'none');
            document.querySelectorAll('.list-only').forEach(el => el.style.display = 'table');
        }

        function copyToClipboard(btn) {
            const code = btn.previousSibling.textContent;
            navigator.clipboard.writeText(code);
            const orig = btn.textContent; btn.textContent = "Copied!";
            setTimeout(() => btn.textContent = orig, 2000);
        }

        function copyDockerWidget(btn) {
            const input = btn.previousElementSibling;
            input.select();
            navigator.clipboard.writeText(input.value);
            const icon = btn.querySelector('i');
            icon.className = 'fas fa-check';
            setTimeout(() => icon.className = 'fas fa-copy', 2000);
        }

        function filterExporters(val) {
            const cards = document.querySelectorAll('.card');
            val = val.toLowerCase();
            cards.forEach(card => {
                const name = card.getAttribute('data-name').toLowerCase();
                const desc = card.getAttribute('data-desc').toLowerCase();
                card.style.display = (name.includes(val) || desc.includes(val)) ? 'flex' : 'none';
            });
        }
    </script>
</body>
</html>
