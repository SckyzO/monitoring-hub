                setThemeColor(color) { this.currentColor = color.name; this.currentColorRGBA = color.value; localStorage.setItem('color-theme', color.name); document.documentElement.style.setProperty('--primary-rgb', color.value.replace(/,/g, '')); document.documentElement.style.setProperty('--primary-rgba', color.value); },
                changeCategory(cat) { this.filterCategory = 'none'; this.currentPage = 1; this.$nextTick(() => { this.filterCategory = cat; }); },
                goToPage(p) {
