    <script>
        function registry() {
            return {
                exporters: [], categories: [], search: '', filterCategory: 'all', view: 'grid', drawerOpen: false, helpOpen: false, selectedItem: null, theme: 'deep', currentColor: 'Blue', currentColorRGBA: '59, 130, 246', showCommandPalette: false, sortKey: 'version', isScrolled: false,
