FROM python:3.12-slim

WORKDIR /workspace

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    nodejs \
    npm \
    rpm \
    dpkg-dev \
    && rm -rf /var/lib/apt/lists/*

# Install global JS tools
RUN npm install -g stylelint stylelint-config-standard postcss-html

# Copy requirements first for better caching
COPY requirements/base.txt /tmp/requirements-base.txt
COPY requirements/dev.txt /tmp/requirements-dev.txt
COPY requirements/docs.txt /tmp/requirements-docs.txt
COPY requirements/test.txt /tmp/requirements-test.txt

# Install all dependencies
RUN pip install --no-cache-dir \
    -r /tmp/requirements-base.txt \
    -r /tmp/requirements-dev.txt \
    -r /tmp/requirements-docs.txt \
    -r /tmp/requirements-test.txt

# Set PYTHONPATH to include the workspace root
ENV PYTHONPATH=/workspace

# Fix Git ownership issues for mounted volumes
RUN git config --global --add safe.directory /workspace

# Default command
CMD ["/bin/bash"]